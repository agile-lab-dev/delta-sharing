{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "maven",
                "gradle",
                "gradle-wrapper"
            ],
            "labels": [
                "dependencies",
                "java"
            ]
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "labels": [
                "dependencies",
                "docker"
            ]
        },
        {
            "matchManagers": [
                "maven",
                "gradle",
                "gradle-wrapper",
                "dockerfile"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": false,
            "platformAutomerge": false
        },
        {
            "matchManagers": [
                "maven",
                "gradle",
                "gradle-wrapper"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        }
    ],
    "prConcurrentLimit": 50,
    "prHourlyLimit": 2
}